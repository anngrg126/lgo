function htmlDecode(input){
  var e = document.createElement('div');
  e.innerHTML = input;
  return e.childNodes[0].nodeValue;
}

$(document).ready(function() {
  $("input#story_final_body_trix_input_story_<%= j @story.id.to_s %>").attr('value', htmlDecode("<%= @story.updated_body ? @story.updated_body : @story.raw_body %>"));
});