<h1>List of all Stories</h1>
<% if user_signed_in? %>
  <%= link_to "New Story", new_story_path, class: "btn", id: "new-story-btn" %>
<% end %>

<% @stories.each do |story| %>
  <div>
    <%= link_to story.raw_title, story_path(story) %>
  </div>
  <div>
    <%= truncate(story.raw_body, length: 150) %>
  </div>
  <div>
    <% if story.user %>
      <!--    If story.user exists, then show the following line:-->
      <small>Created by: <%= story.user.email %></small>
    <% end %>
  </div>
<% end %>
